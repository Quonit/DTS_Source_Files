DreamMenu
{
	wd = GetWeekDay
	ap = GetAP
	nowmin = Getnowmin
	nowhour = Getnowhour
	--
	"\n\n\_q"
	--
	"\![*]\q[Say something,altalk]\n"
	"\![*]\q[Speak,altalk]\n"
	"\![*]\q[Talk,altalk]\n"
	"\![*]\q[Ask them to say something,altalk]\n"
	--
	if lastTalk != ""
	{
		"\![*]\q[Repeat,OnLastTalk]\n\n"
		"\![*]\q[Ask them to repeat themself,OnLastTalk]\n\n"
		"\![*]\q[Ask them to repeat what he last said,OnLastTalk]\n\n"
		"\![*]\q[Ask them to say what he just said,OnLastTalk]\n\n"
